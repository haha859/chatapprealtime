<%- include('partials/header', { user }) %>
<div class="container mt-4">
  <h2>Lời mời kết bạn</h2>
  <% if (requests.length === 0) { %>
    <div>Không có lời mời nào.</div>
  <% } %>
  <ul>
    <% requests.forEach(r => { %>
      <li>
        <%= r.from.displayName || r.from.username %>
        <form method="post" action="/accept_friend" style="display:inline">
          <input type="hidden" name="requestId" value="<%= r._id %>">
          <button class="btn btn-success btn-sm">Chấp nhận</button>
        </form>
      </li>
    <% }) %>
  </ul>
  <a href="/" class="btn btn-link">Về trang chính</a>
</div>
<%- include('partials/footer') %>